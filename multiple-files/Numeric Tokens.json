{
  "spacing": {
    "none": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-none"
        }
      },
      "$type": "dimension",
      "$value": "{scale.0}",
      "$description": "(0px). Use when elements should have no gap or padding between them (e.g both consecutive sections have white bg, so the next section will have a 0px top padding to avoid an excessive spacing)."
    },
    "2xs": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-2xs"
        }
      },
      "$type": "dimension",
      "$value": "{scale.1}",
      "$description": "(4px). Use for very tight spacing like icon-to-text gaps or subtle padding."
    },
    "xs": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-xs"
        }
      },
      "$type": "dimension",
      "$value": "{scale.2}",
      "$description": "(8px). Use for compact component internal spacing or small gaps between related elements."
    },
    "sm": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-sm"
        }
      },
      "$type": "dimension",
      "$value": "{scale.3}",
      "$description": "(12px). Use for moderate padding within components or gaps between closely related items."
    },
    "md": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-md"
        }
      },
      "$type": "dimension",
      "$value": "{scale.4}",
      "$description": "(16px). Default spacing for most component padding and gaps. Our baseline spacing unit."
    },
    "lg": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-lg"
        }
      },
      "$type": "dimension",
      "$value": "{scale.6}",
      "$description": "(24px). Use for generous component padding or gaps between distinct sections."
    },
    "xl": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-xl"
        }
      },
      "$type": "dimension",
      "$value": "{scale.8}",
      "$description": "(32px). Use for significant separation between components or section padding."
    },
    "2xl": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-2xl"
        }
      },
      "$type": "dimension",
      "$value": "{scale.10}",
      "$description": "(40px). Use for separation between content blocks within a section."
    },
    "3xl": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-3xl"
        }
      },
      "$type": "dimension",
      "$value": "{scale.12}",
      "$description": "(48px). Use for vertical separation between sections."
    },
    "4xl": {
      "$extensions": {
        "com.figma.scopes": [
          "WIDTH_HEIGHT",
          "GAP",
          "FONT_VARIATIONS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$spacing-4xl"
        }
      },
      "$type": "dimension",
      "$value": "{scale.16}",
      "$description": "(64px). Use for maximum spacing between distinct page areas or special layout needs."
    }
  },
  "radius": {
    "square": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-square"
        }
      },
      "$type": "borderRadius",
      "$value": "{scale.0}",
      "$description": "Sharp corners with no rounding (0px). Use for rectangular elements requiring hard edges."
    },
    "sm": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-sm"
        }
      },
      "$type": "borderRadius",
      "$value": "{scale.custom.min}",
      "$description": "Small corner radius (6px). Use for subtle rounding on cards and other UI elements."
    },
    "md": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-md"
        }
      },
      "$type": "borderRadius",
      "$value": "{scale.2}",
      "$description": "Medium corner radius (8px). Standard rounding for most components like inputs"
    },
    "xl": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-xl"
        }
      },
      "$type": "borderRadius",
      "$value": "{scale.6}",
      "$description": "Use it only for Search Typeahead menus and pill shaped items (e.g Quantity Stepper)."
    },
    "2xl": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-2xl"
        }
      },
      "$type": "borderRadius",
      "$value": "{scale.12}",
      "$description": "Use it for pill-shaped elements like buttons and chips."
    },
    "full": {
      "$extensions": {
        "com.figma.scopes": [
          "CORNER_RADIUS"
        ],
        "com.figma.codeSyntax": {
          "Web": "$radius-full"
        }
      },
      "$type": "borderRadius",
      "$value": "50%",
      "$description": "Fully rounded borders (pill-shaped buttons). Equals 1000px radius on Figma."
    }
  },
  "size": {
    "height": {
      "xs": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-height-xs"
          }
        },
        "$type": "dimension",
        "$value": "{scale.6}",
        "$description": "(24px). Use as the base icon height and smaller elements."
      },
      "sm": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-height-sm"
          }
        },
        "$type": "dimension",
        "$value": "{scale.8}",
        "$description": "(32px). Use it as the fixed height for Small Buttons and sm variants."
      },
      "md": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-height-md"
          }
        },
        "$type": "dimension",
        "$value": "{scale.10}",
        "$description": "(40px). Fixed height for default Chips (md).."
      },
      "lg": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-height-lg"
          }
        },
        "$type": "dimension",
        "$value": "{scale.12}",
        "$description": "(48px). Fixed height for Large Buttons and other large component variants (lg)."
      },
      "xl": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-height-xl"
          }
        },
        "$type": "dimension",
        "$value": "{scale.18}",
        "$description": "(72px). Height for xl icon buttons and chips."
      },
      "icon": {
        "xs": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-xs"
            }
          },
          "$type": "dimension",
          "$value": "{scale.4}",
          "$description": "(16px). Height for the smallest icon size (Small Button)"
        },
        "sm": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-sm"
            }
          },
          "$type": "dimension",
          "$value": "{scale.5}",
          "$description": "(20px). Height for the icon in a Large Button."
        },
        "md": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-md"
            }
          },
          "$type": "dimension",
          "$value": "{scale.6}",
          "$description": "(24px). Default size for most standalone icons and instances in icon buttons."
        },
        "lg": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-lg"
            }
          },
          "$type": "dimension",
          "$value": "{scale.8}",
          "$description": "(32px). Default size for most standalone icons and instances in icon buttons."
        },
        "2xl": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-2xl"
            }
          },
          "$type": "dimension",
          "$value": "{scale.16}",
          "$description": "(64px). Default size for most standalone icons and instances in icon buttons."
        },
        "4xl": {
          "$extensions": {
            "com.figma.scopes": [
              "WIDTH_HEIGHT"
            ],
            "com.figma.codeSyntax": {
              "Web": "$size-height-icon-4xl"
            }
          },
          "$type": "dimension",
          "$value": "{scale.20}",
          "$description": "(80px). Max height of a highlighted icon (e.g. a more detailed icon of a feature of benefit on a landing page)."
        }
      }
    },
    "width": {
      "button-mw-lg": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-width-button-mw-lg"
          }
        },
        "$type": "dimension",
        "$value": "{scale.32}",
        "$description": "(128px). Ensures large buttons have substantial clickable area and prominent visual hierarchy."
      },
      "button-mw-sm": {
        "$extensions": {
          "com.figma.scopes": [
            "WIDTH_HEIGHT"
          ],
          "com.figma.codeSyntax": {
            "Web": "$size-width-button-mw-sm"
          }
        },
        "$type": "dimension",
        "$value": "{scale.24}",
        "$description": "(96px). Ensures small buttons have adequate clickable area and visual presence."
      }
    }
  }
}