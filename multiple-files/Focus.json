{
  "focus": {
    "default": {
      "$type": "boxShadow",
      "$value": [
        {
          "color": "{color.background.default.solid}",
          "type": "dropShadow",
          "x": "0",
          "y": "0",
          "blur": "0",
          "spread": "2"
        },
        {
          "color": "{color.border.focus.default}",
          "type": "dropShadow",
          "x": "0",
          "y": "0",
          "blur": "0",
          "spread": "6"
        }
      ],
      "$description": "Use for default focus ring."
    },
    "default-inverted": {
      "$type": "boxShadow",
      "$value": [
        {
          "color": "{color.background.default.static-black}",
          "type": "dropShadow",
          "x": "0",
          "y": "0",
          "blur": "0",
          "spread": "2"
        },
        {
          "color": "{color.border.focus.accent-inverted}",
          "type": "dropShadow",
          "x": "0",
          "y": "0",
          "blur": "0",
          "spread": "6"
        }
      ],
      "$description": "Use for default focus ring on inverted surfaces."
    },
    "accent": {
